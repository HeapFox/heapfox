{
  "name": "heapfox",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "turbo": "latest"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "landing:dev": "turbo run dev --filter=@heapfox/landing",
    "landing:build": "turbo build --filter=@heapfox/landing",
    "api:dev": "turbo run dev --filter=@heapfox/api",
    "api:build": "turbo build --filter=@heapfox/api",
    "api:prisma": "pnpm --filter @heapfox/api run prisma",
    "cli:dev": "turbo run dev --filter=@heapfox/cli",
    "cli:build": "turbo build --filter=@heapfox/cli",
    "dev": "turbo run dev",
    "build": "turbo build"
  }
}
